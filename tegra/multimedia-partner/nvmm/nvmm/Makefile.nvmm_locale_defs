SUPERPARSER_LOCALE := $(LOCALE_CPU)
MP4PARSER_LOCALE := $(LOCALE_CPU)
MP2PARSER_LOCALE := $(LOCALE_CPU)
MP3PARSER_LOCALE := $(LOCALE_CPU)
OGGPARSER_LOCALE := $(LOCALE_CPU)
AACPARSER_LOCALE := $(LOCALE_CPU)
AMRPARSER_LOCALE := $(LOCALE_CPU)
3GPWRITER_LOCALE := $(LOCALE_CPU)
WAVPARSER_LOCALE := $(LOCALE_CPU)
FLVPARSER_LOCALE := $(LOCALE_CPU)

ifeq ($(TARGET_OS),winxp)
