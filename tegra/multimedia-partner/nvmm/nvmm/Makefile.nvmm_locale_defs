LOCALE_CPU := 0
LOCALE_AVP := 1
LOCALE_ALL := 2

LCDEFS += -DNV_BLOCK_LOCALE_CPU=$(LOCALE_CPU)
LCDEFS += -DNV_BLOCK_LOCALE_AVP=$(LOCALE_AVP)
LCDEFS += -DNV_BLOCK_LOCALE_ALL=$(LOCALE_ALL)

ENCAMRNB_LOCALE := $(LOCALE_CPU)
ENCAMRWB_LOCALE := $(LOCALE_CPU)
ENCAAC_LOCALE := $(LOCALE_CPU)
