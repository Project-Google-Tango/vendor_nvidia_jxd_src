  DECMP3_LOCALE := $(LOCALE_ALL)
  DECWMA_LOCALE := $(LOCALE_ALL)
else
DECMP3_LOCALE := $(LOCALE_AVP)
DECWMA_LOCALE := $(LOCALE_AVP)
endif
