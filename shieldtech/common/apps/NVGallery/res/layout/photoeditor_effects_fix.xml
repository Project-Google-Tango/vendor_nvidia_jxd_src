            android:src="@drawable/photoeditor_effect_sharpen"/>
        <TextView
            android:id="@+id/effect_label"
            android:text="@string/sharpen"
            style="@style/EffectLabel"/>
    </com.android.gallery3d.photoeditor.actions.SharpenAction>

</LinearLayout>
